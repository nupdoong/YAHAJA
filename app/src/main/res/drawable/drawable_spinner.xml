<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" /> <!-- 배경 -->
                    <corners android:radius="5dp"></corners>
                    <stroke android:width="3dip" android:color="#d0d3d8" /> <!-- 외각선 -->
                </shape>
            </item>

            <!-- 회살표를 넣기위해-->
            <item android:right="10dp" android:top="3dp" android:bottom="3dp">
                <bitmap android:src="@drawable/sort_down"  android:gravity="center_vertical|right" />
            </item>
        </layer-list>
    </item>
</selector>