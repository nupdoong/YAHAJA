<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClanmakeActivity">

    <TextView
        android:id="@+id/textView_signup_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/clan_make_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/clan_make_explain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:hint="클랜 이름"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/clan_make_type"
        android:layout_width="311dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/editText_signup_phone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:ems="10"
        android:hint="클랜 종목 (billiard, basketball, soccer)" />

    <EditText
        android:id="@+id/clan_make_master"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_signup_phone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="클랜 마스터" />

    <EditText
        android:id="@+id/clan_make_explain"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/editText_signup_sex"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="283dp"
        android:ems="10"
        android:hint="클랜 설명" />

    <TextView
        android:id="@+id/clan_make_signup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="390dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="클랜 만들기"
        android:textColor="#001eff"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>